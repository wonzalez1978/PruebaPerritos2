<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/containerMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">
        
       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/image_photo"
           android:layout_width="@dimen/img.item.size"
           android:layout_height="@dimen/img.item.size"
           android:src="@mipmap/ic_launcher"
           android:layout_alignParentStart="true"
           android:layout_centerVertical="true"/>
        
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/perrito.hint.nombre"
            android:maxLines="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="@dimen/material_emphasis_medium"
            android:layout_toEndOf="@id/image_photo"
            android:layout_centerVertical="true"/>
        



    </RelativeLayout>
</androidx.cardview.widget.CardView>